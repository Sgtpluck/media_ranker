
<% @album.errors.full_messages.each do |error| %>
  <%= error %><br>
<% end %>

<%= form_for @album do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %> <br>

  <%= f.label :artist %>
  <%= f.text_field :artist %><br>

  <%= f.label :description %>
  <%= f.text_area :description %><br><br>

  <%= f.submit class: 'ui button' %>

<% end %>