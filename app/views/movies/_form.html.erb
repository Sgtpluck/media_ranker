<% @movie.errors.full_messages.each do |error| %>
  <%= error %><br>
  <% end %>

<%= form_for @movie do |f| %>

<%= f.label :title %>
<%= f.text_field :title %><br>

<%= f.label :director %>
<%= f.text_field :director %><br>

 <div id="editor-button-bar"></div>
  <%=f.label :description %><br>
  <%=f.text_area :description, size: '80x10', id: 'editor-input' %>
</div> 
<div id="editor-preview"></div><br>

<%= f.submit class: 'ui button' %>
<% end %>